{% extends 'main/dashboard.html.twig' %}

{% block title %}Actions{% endblock %}

{% block header %}
    <h1>Company information</h1>
{% endblock %}

{% block main %}
    <p class="h3 mb-4">Business details for {{ company.CPN_NAME }}</p>

    <table class="table table-striped table-bordered col-md-12">
            <thead>
                <tr>
                    <th>Country</th>
                    <th>Volume</th>
                    <th>Market area</th>
                    <th>Creation date</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-muted">    
                        {{ company.CPN_COUNTRY }}
                    </td>
                    <td class="text-muted">
                        {{ company.HIS_VOLUME }}
                    </td>
                    <td class="text-muted">
                        {{ company.CPN_MARKET_AREA }}
                    </td>
                    <td class="text-muted">
                        {{ company.CPN_CD|date('Y-m-d') }}
                    </td>
                    <td class="text-muted">
                        {{ company.HIS_VALUE }}
                    </td>
                </tr>
            </tbody>
        </table>
{% endblock %}