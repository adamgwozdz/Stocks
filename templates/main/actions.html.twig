{% extends 'main/dashboard.html.twig' %}

{% block title %}Actions{% endblock %}

{% block header %}
    <h1>Company information</h1>
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block main %}
    <p class="h3 mb-4">Business details for {{ company.cpnName }}</p>

    <table class="table table-striped table-bordered col-md-12">
            <thead>
                <tr>
                    <th>Country</th>
                    <th>Volume</th>
                    <th>Market area</th>
                    <th>Creation date</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-muted">    
                        {{ company.cpnCountry }}
                    </td>
                    <td class="text-muted">
                        {{ company.cpnVolume }}
                    </td>
                    <td class="text-muted">
                        {{ company.cpnMarketArea }}
                    </td>
                    <td class="text-muted">
                        {{ company.cpnCD|date('Y-m-d') }}
                    </td>
                    <td class="text-muted">
                        {{ company.cpnValue }}
                    </td>
                </tr>
            </tbody>
        </table>
{% endblock %}