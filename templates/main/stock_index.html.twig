{% extends 'main/dashboard.html.twig' %}

{% block title %}Indeks{% endblock %}

{% block header %}
    <h1>Stock index</h1>
{% endblock %}

{% block main %}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Name</td>
                <td>Value</td>
                <td>Volume</td>
                <td>Market Area</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            {% for cpn in company %}
            <tr>
                <td>
                    <a href="{{ path('actions', {name: cpn.CPN_NAME}) }}">
                        {{ cpn.CPN_NAME }}
                    </a>
                </td>
                <td>{{ cpn.HIS_VALUE }}</td>
                <td>{{ cpn.HIS_VOLUME }}</td>
                <td>{{ cpn.CPN_MARKET_AREA }}</td>
                <td>
                    <form action="modifyStocksAmount" method="POST">
                        <input type="hidden" value={{cpn.CPN_NAME}} name="comp">
                        <input type="hidden" value={{user.id}} name="user_id">
                        <label for="Buy">Buy</label>
                        <input type="radio" name="action" value="buy" id="Buy">
                        <input type="radio" name="action" value="sell" id="Sell">
                        <label for="Sell">Sell</label>    </br>             

                        <input type="number" min="1" name="amount" class="input-amount">

                        <input type="submit" value="Ok" class="btn btn-primary btn-amount">
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}